<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGameScoreStandard.MainPage">

    <StackLayout Padding="20">
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="SCORE GAME" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <StackLayout Orientation="Horizontal">
            <Entry x:Name="EntId" Keyboard="Numeric" Placeholder="Id"/>
            <Button x:Name="BtLocalizar" Text="Localizar" Clicked="BtLocalizar_CLicked"/>
            <Button x:Name="BtExcluir" Text="Excluir" Clicked="BtExcluir_Clicked"/>
        </StackLayout>
        <Entry Placeholder="Highscore" x:Name="EntHighScore" Keyboard="Numeric"/>
        <Entry Placeholder="Game" x:Name="EntGame" Keyboard="Text"/>
        <Entry Placeholder="Name" x:Name="EntName" Keyboard="Text"/>
        <Entry Placeholder="E-mail" x:Name="EntEmail" Keyboard="Email"/>
        <Entry Placeholder="Phrase" x:Name="EntPhrase" Keyboard="Text"/>
        <Button Text="Cadastrar" x:Name="BtCadastrar" Clicked="BtCadastrar_Clicked"/>
    </StackLayout>

</ContentPage>
